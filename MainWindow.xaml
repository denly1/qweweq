<Window x:Class="Client_server1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Имя пользователя:" Margin="10"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <Button Content="Создать новый чат" Margin="10" Click="CreateChat_Click"/>
            <TextBlock Text="IP Адрес:" Margin="10"/>
            <TextBox x:Name="IpAddressTextBox" Margin="10"/>
            <Button Content="Подключиться к чату" Margin="10" Click="ConnectChat_Click"/>
        </StackPanel>
    </Grid>
</Window>
